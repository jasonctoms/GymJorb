<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/routinesFragment"
            android:name="com.jorbital.gymjorb.RoutinesFragment"
            android:label="fragment_routines"
            tools:layout="@layout/fragment_routines"/>
    <fragment
            android:id="@+id/loginFragment"
            android:name="com.jorbital.gymjorb.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_routinesFragment"
                app:destination="@id/routinesFragment"
                app:popUpToInclusive="true"
                app:popUpTo="@+id/routinesFragment"/>
    </fragment>
</navigation>