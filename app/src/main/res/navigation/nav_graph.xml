<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/routinesFragment">

    <fragment
            android:id="@+id/routinesFragment"
            android:name="com.jorbital.gymjorb.views.RoutinesFragment"
            android:label="fragment_routines"
            tools:layout="@layout/fragment_routines">
        <action
                android:id="@+id/action_routinesFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@+id/routinesFragment"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment
            android:id="@+id/loginFragment"
            android:name="com.jorbital.gymjorb.views.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_routinesFragment"
                app:destination="@id/routinesFragment"
                app:popUpTo="@+id/loginFragment"
                app:popUpToInclusive="true"/>
    </fragment>
    <action
            android:id="@+id/action_global_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
</navigation>